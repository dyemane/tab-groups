{
  "manifest_version": 3,
  "name": "Project Tab Groups",
  "version": "0.2.0",
  "description": "Save, restore, and switch tab groups per project",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": ["tabGroups", "tabs", "storage"],
  "commands": {
    "switch-next-project": {
      "suggested_key": {
        "default": "Alt+Shift+Right"
      },
      "description": "Switch to next project"
    },
    "switch-prev-project": {
      "suggested_key": {
        "default": "Alt+Shift+Left"
      },
      "description": "Switch to previous project"
    },
    "save-current-project": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Save/update current project"
    }
  }
}
